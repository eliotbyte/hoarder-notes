{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "prettier"
  ],
  "parserOptions": {	
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "plugins": [
    "vue"
  ],
  "rules": {
    "indent": ["error", 2],
    "no-mixed-spaces-and-tabs": "error",
    "vue/html-indent": ["error", 2],
    "vue/max-attributes-per-line": ["error", {
      "singleline": 4,
      "multiline": 1
    }]
  }
}
